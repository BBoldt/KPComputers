(include "io.scm")

(define run (lambda ()
                (term:setCursorPos 1 (term:getCursorY))
                (print "> ")
                (define input (gets ""))
                (cond ((null? input)
                       (println "null"))
                      ((string=? input "clear")
                       (term:clear)
                       (term:setCursorPos 1 1)
                       (println "KPC-OS v0.0")
                       (term:setCursorPos 1 2)
                       (print "> ")
                       (run))
                      (else
                          (define output (os:runScheme input))
                          (cond ((null? output)
                                 (term:setCursorPos 1 (+ (term:getCursorY) 1))
                                 (run))
                                (else
                                    (term:setCursorPos 1 (+ (term:getCursorY) 1))
                                    (println output)
                                    (run)))))))
(term:clear)
(term:setCursorPos 1 1)
(println "KPC-OS v0.0")
(run)